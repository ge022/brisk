    <%= form.label :description %>
    <%= form.text_area :description, id: :product_description, class: 'fullwidth tinymce' %>
  </div>

  <div class="field">
    <%= form.label :quantity_on_hand %>
    <%= form.number_field :quantity_on_hand, id: :product_quantity_on_hand, class: 'fullwidth' %>
  </div>

  <div class="field">
    <%= form.label :selling_price %>
    <%= form.text_field :selling_price, id: :product_selling_price, class: 'fullwidth' %>
  </div>

  <div class="field">
    <%= form.label :cost_of_product %>
    <%= form.text_field :cost_of_product, id: :product_cost_of_product, class: 'fullwidth' %>
  </div>

  <div class="field">
    <%= form.label :shipping_weight %>
    <%= form.text_field :shipping_weight, id: :product_shipping_weight, class: 'fullwidth' %>
  </div>

  <div class="field">
    <%= form.label :image_thumbnail %>
    <%= form.text_field :image_thumbnail, id: :product_image_thumbnail, class: 'fullwidth' %>
  </div>

  <div class="field">
    <%= form.label :image_full %>
    <%= form.text_field :image_full, id: :product_image_full, class: 'fullwidth' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
