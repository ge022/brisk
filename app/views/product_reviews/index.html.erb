<p id="notice"><%= notice %></p>

<h1>Product Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Comment</th>
      <th>Rating</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_reviews.each do |product_review| %>
      <tr>
        <td><%= product_review.author %></td>
        <td><%= product_review.comment %></td>
        <td><%= product_review.rating %></td>
        <td><%= product_review.product %></td>
        <td><%= link_to 'Show', product_review %></td>
        <td><%= link_to 'Edit', edit_product_review_path(product_review) %></td>
        <td><%= link_to 'Destroy', product_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Review', new_product_review_path %>
